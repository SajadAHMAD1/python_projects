# *** It is a program to convert temperatures between Celsius, Fahrenheit, and Kelvin using NumPy
# arrays and vectorized operations.  *** #



import numpy as np
def temperature_conversion(celsius):


    Fahrenheit = ((9/5) * celsius) + 32
    print(f'Fahrenheit: {Fahrenheit}')

    kelvin = celsius + 273.15
    print(f'Kelvin: {kelvin}')


#Output of the program
if __name__ == "__main__":

    celsius = np.array([0, 25, 100, 200, 300, 400])
    print(f'Temperature in Celsius: {celsius}')

    output = temperature_conversion(celsius)


